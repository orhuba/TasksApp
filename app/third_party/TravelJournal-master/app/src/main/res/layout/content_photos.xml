<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dytstudio.traveljournal.Photos"
    tools:showIn="@layout/activity_photos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/space8"
        android:paddingLeft="@dimen/space16"
        android:paddingRight="@dimen/space16"
        android:paddingBottom="@dimen/space16">
        <com.dytstudio.traveljournal.customview.SquareImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/photo"
            android:background="@drawable/bg_photo"
            android:scaleType="centerCrop"/>
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="nowrap"
            app:justifyContent="space_between"
            android:layout_marginTop="@dimen/space16"
            android:paddingTop="@dimen/space8"
            android:paddingBottom="@dimen/space16">
            <TextView
                android:id="@+id/tv_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_love"
                android:drawablePadding="@dimen/space8"
                android:gravity="center_vertical"
                android:text="25 Likes"
                android:textColor="@color/text_dark_light"
                android:textSize="@dimen/h6"
                android:textAppearance="@style/Regular"/>
            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_comment"
                android:drawablePadding="@dimen/space8"
                android:gravity="center_vertical"
                android:text="1 Comment"
                android:textColor="@color/text_dark_light"
                android:textSize="@dimen/h6"
                android:textAppearance="@style/Regular"/>
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_share"
                android:drawablePadding="@dimen/space8"
                android:gravity="center_vertical"
                android:text="20 Share"
                android:textColor="@color/text_dark_light"
                android:textSize="@dimen/h6"
                android:textAppearance="@style/Regular"/>
        </com.google.android.flexbox.FlexboxLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFe5e5e5"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:text="Bali Bird Park"
            android:textSize="@dimen/h2"
            android:textColor="@color/text_dark"
            android:textAppearance="@style/SemiBold"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space8"
            android:drawableLeft="@drawable/ic_pin_drop"
            android:drawablePadding="@dimen/space8"
            android:text="Bali, Batubulan gianyar regency"
            android:textSize="@dimen/h6"
            android:textColor="@color/text_dark_light"
            android:textAppearance="@style/Regular"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:text="The bird park houses more than 5000 birds representing more than 200 species in an enclosed aviary"
            android:textSize="@dimen/h5"
            android:textColor="@color/text_dark_light"
            android:textAppearance="@style/Regular"/>
    </LinearLayout>
</ScrollView>
