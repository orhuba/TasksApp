<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dytstudio.traveljournal.Details"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:collapsedTitleGravity="center_horizontal"
            app:expandedTitleGravity="center_horizontal"
            app:expandedTitleTextAppearance="@style/SemiBold"
            app:collapsedTitleTextAppearance="@style/SemiBold"
            android:fitsSystemWindows="true"
            android:contentInsetStart="0dp"
            app:contentInsetStart="0dp">

            <com.dytstudio.traveljournal.customview.SquareImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/photo"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                android:layout_margin="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:padding="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="title"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/h2"
                    android:textAppearance="@style/SemiBold"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-88dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.dytstudio.traveljournal.Details"
            tools:showIn="@layout/activity_details">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space16"
                    android:background="@drawable/bg_desc"
                    android:layout_marginLeft="@dimen/space16"
                    android:layout_marginRight="@dimen/space16">
                    <RelativeLayout
                        android:id="@+id/rl_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/user_profile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/profile"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/user_profile"
                            android:layout_marginLeft="@dimen/space16"
                            android:orientation="vertical"
                            android:layout_centerVertical="true">
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bali Bird Park"
                                android:textSize="@dimen/h2"
                                android:textColor="@color/text_dark"
                                android:textAppearance="@style/SemiBold"/>
                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space8"
                                android:drawableLeft="@drawable/ic_pin_drop"
                                android:drawablePadding="@dimen/space8"
                                android:text="Bali, Batubulan gianyar regency"
                                android:textSize="@dimen/h6"
                                android:textColor="@color/text_dark_light"
                                android:textAppearance="@style/Regular"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_info"
                        android:layout_marginTop="@dimen/space16"
                        android:text="The bird park houses more than 5000 birds representing more than 200 species in an enclosed aviary"
                        android:textSize="@dimen/h5"
                        android:textColor="@color/text_dark_light"
                        android:textAppearance="@style/Regular"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:padding="@dimen/space16"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space16"
                    android:paddingRight="@dimen/space16">
                    <TextView
                        android:id="@+id/tv_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_love"
                        android:drawablePadding="@dimen/space8"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="25 Likes"
                        android:textColor="@color/text_dark_light"
                        android:textSize="@dimen/h6"
                        android:textAppearance="@style/Regular"/>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_love"
                        android:layout_alignParentRight="true"
                        app:flexWrap="nowrap"
                        app:flexDirection="row"
                        app:alignContent="flex_end"
                        app:justifyContent="flex_end">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profil1"/>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profil2"
                            android:layout_marginLeft="@dimen/space8"/>
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/profil3"
                            android:layout_marginLeft="@dimen/space8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="25+"
                            android:textColor="@color/text_dark_light"
                            android:textSize="@dimen/h6"
                            android:textAppearance="@style/Regular"
                            android:layout_marginLeft="@dimen/space8"/>
                    </com.google.android.flexbox.FlexboxLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space16"
                    android:paddingLeft="@dimen/space16"
                    android:paddingRight="@dimen/space16">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Comments"
                        android:textSize="@dimen/h3"
                        android:textAllCaps="true"
                        android:textColor="@color/text_dark"
                        android:textAppearance="@style/SemiBold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="+ comment"
                        android:textSize="@dimen/h5"
                        android:textColor="@color/text_dark"
                        android:textAppearance="@style/Regular"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space16"
                    android:layout_marginLeft="@dimen/space16"
                    android:layout_marginRight="@dimen/space16"
                    android:background="#e5e5e5"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space16"
                    android:paddingRight="@dimen/space16"
                    android:paddingLeft="@dimen/space16">
                    <ImageView
                        android:id="@+id/img_comment"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/profil2"/>
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_comment"
                        android:layout_marginLeft="@dimen/space16"
                        android:layout_alignTop="@id/img_comment"
                        android:text="mariam"
                        android:textSize="@dimen/h5"
                        android:textColor="@color/text_dark"
                        android:textAppearance="@style/SemiBold"/>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_username"
                        android:layout_alignBottom="@id/tv_username"
                        android:layout_alignBaseline="@id/tv_username"
                        android:layout_marginLeft="@dimen/space8"
                        android:text="2 hours ago"
                        android:textColor="@color/text_dark_light"
                        android:textSize="@dimen/h7"
                        android:textAppearance="@style/Regular"/>
                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/img_comment"
                        android:layout_marginLeft="@dimen/space16"
                        android:layout_below="@id/tv_username"
                        android:text="Nice share @mahisa. Very nice place to go, a lot of beautiful birds from all over the world"
                        android:textSize="@dimen/h5"
                        android:textColor="@color/text_dark"
                        android:textAppearance="@style/Regular"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
